// Admin Data Mocks
const ADMIN_DATA = {
  users: [
    { id: 1, name: "Amit Sharma", mobile: "9123456789", gender: "Male", joined: "2023-10-12" },
    { id: 2, name: "Priya Singh", mobile: "9876500000", gender: "Female", joined: "2023-11-05" },
