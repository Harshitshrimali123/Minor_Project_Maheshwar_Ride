  { id: 'mini', name: 'Mini Cab', icon: 'ðŸš—', price: 150, time: '8 min', desc: 'Comfy hatchbacks' },
  { id: 'sedan', name: 'Holkar Prime', icon: 'ðŸš™', price: 190, time: '10 min', desc: 'Spacious sedans, top drivers' },
];

