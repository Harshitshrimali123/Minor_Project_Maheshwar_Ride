    { id: "TXN1003", amount: 200, method: "UPI", status: "Failed", date: "2023-11-22", user: "Rahul Verma", driver: "Rajesh Verma" },
  ]
};

export default function App() {
  // Views: landing, auth-user, auth-driver-register, auth-driver-login, auth-admin, home, choosing, searching, riding, completed, payment, thank-you, driver-dashboard, admin-dashboard
  const [view, setView] = useState('landing'); 
  const [userRole, setUserRole] = useState(null); // 'user', 'driver', 'admin'
  const [adminTab, setAdminTab] = useState('overview'); // overview, users, drivers, payments
  
  // Registration Data
  const [formData, setFormData] = useState({
    name: '', mobile: '', gender: 'male', 
    username: '', password: '', // Admin/Driver Login
    license: '', uniqueId: ''   // Driver
  });

  // State to hold generated credentials for Driver
  const [generatedCredentials, setGeneratedCredentials] = useState(null);

  const [currentUser, setCurrentUser] = useState(null);
  const [driverStatus, setDriverStatus] = useState('offline'); // online, offline
  const [driverActiveRide, setDriverActiveRide] = useState(null); // Simulate a ride request coming to driver

  // Ride State
  const [pickup, setPickup] = useState('');
  const [dropoff, setDropoff] = useState('');
  const [selectedRide, setSelectedRide] = useState(null);
  const [menuOpen, setMenuOpen] = useState(false);
  const [searchTimer, setSearchTimer] = useState(0);
  
  // Payment State
  const [paymentMethod, setPaymentMethod] = useState('online');

  // Simulate finding a driver
  useEffect(() => {
    let interval;
    if (view === 'searching') {
      interval = setInterval(() => {
        setSearchTimer(prev => {
          if (prev >= 100) {
            setView('riding');
            return 100;
          }
          return prev + 2; // Progress bar speed
        });
      }, 50);
    }
    return () => clearInterval(interval);
  }, [view]);

  // --- Handlers ---

  const handleInputChange = (e) => {
    setFormData({ ...formData, [e.target.name]: e.target.value });
  };

  const handleAdminLogin = () => {
    if (formData.username === 'admin' && formData.password === 'admin123') {
      setCurrentUser({ name: 'Administrator', role: 'admin' });
      setView('admin-dashboard');
    } else {
      alert('Invalid Admin Credentials (Try: admin / admin123)');
    }
  };

  const handleDriverRegister = () => {
    // Generate mock credentials
    const genUsername = `driver${Math.floor(Math.random()*1000)}`;
    const genPassword = Math.random().toString(36).slice(-8);
    const genId = 'DRV-' + Math.floor(1000 + Math.random() * 9000);
    
    setGeneratedCredentials({
      username: genUsername,
      password: genPassword,
      uniqueId: genId,
      ...formData
    });
  };

  const handleDriverLogin = () => {
    // In a real app, this would verify against a DB. 
    // For demo, we check against the just-generated credentials or a generic fallback
    if (generatedCredentials && 
        formData.username === generatedCredentials.username && 
        formData.password === generatedCredentials.password) {
       setCurrentUser({ ...generatedCredentials, role: 'driver' });
       setView('driver-dashboard');
    } else if (formData.username === 'demo' && formData.password === 'demo') {
       // Fallback for testing without registering
       setCurrentUser({ name: 'Demo Driver', uniqueId: 'DRV-TEST', role: 'driver' });
       setView('driver-dashboard');
    } else {
       alert('Invalid Credentials. Please register first or use the credentials provided.');
    }
  };

  const handleUserLogin = () => {
    setCurrentUser({ ...formData, role: 'user' });
    setView('home');
  };

  const handleLogout = () => {
    setCurrentUser(null);
    setFormData({ name: '', mobile: '', gender: 'male', username: '', password: '', license: '', uniqueId: '' });
    setGeneratedCredentials(null);
    setView('landing');
    setMenuOpen(false);
  };

  const handleSearch = (e) => {
    e.preventDefault();
    if (pickup && dropoff) {
      setView('choosing');
    }
  };

  const confirmRide = (ride) => {
    setSelectedRide(ride);
    setView('searching');
    setSearchTimer(0);
  };

  const cancelRide = () => {
    setView('home');
    setPickup('');
    setDropoff('');
    setSelectedRide(null);
  };

  const proceedToPayment = () => {
    setView('payment');
  };

  const finishPayment = () => {
    setView('thank-you');
    setTimeout(() => {
      handleLogout(); // Or return to home, but resetting for demo flow
    }, 4000);
  };

  // --- Render Components ---

  const renderHeader = () => (
    <header className="bg-white shadow-sm z-30 px-4 py-3 flex items-center justify-between sticky top-0">
      <div className="flex items-center space-x-2" onClick={() => userRole === 'user' && setView('home')}>
        <div className="bg-orange-600 p-1.5 rounded-lg">
          <Car className="w-6 h-6 text-white" />
        </div>
        <h1 className="text-xl font-bold text-gray-800 tracking-tight">Maheshwar<span className="text-orange-600">Ride</span></h1>
      </div>
      {currentUser && (
        <button onClick={() => setMenuOpen(!menuOpen)} className="p-2 hover:bg-gray-100 rounded-full">
          {menuOpen ? <X className="w-6 h-6" /> : <Menu className="w-6 h-6" />}
        </button>
      )}
    </header>
  );

  const renderSideMenu = () => (
    menuOpen && (
      <div className="absolute top-16 right-0 w-64 h-full bg-white shadow-xl z-40 border-l animate-slide-in">
        <div className="p-4 space-y-4">
          <div className="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
            <div className="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center">
              <User className="w-6 h-6 text-gray-500" />
            </div>
            <div>
              <p className="font-semibold">{currentUser?.name || 'Guest'}</p>
              <p className="text-xs text-gray-500 capitalize">{currentUser?.role}</p>
            </div>
          </div>
          {currentUser?.role === 'user' && (
            <>
              <button className="w-full text-left px-4 py-2 hover:bg-orange-50 text-gray-700 rounded">Your Rides</button>
              <button onClick={() => { setView('payment'); setMenuOpen(false); }} className="w-full text-left px-4 py-2 hover:bg-orange-50 text-gray-700 rounded">Payments</button>
            </>
          )}
          <button onClick={handleLogout} className="w-full text-left px-4 py-2 text-red-600 hover:bg-red-50 rounded flex items-center">
            <LogOut className="w-4 h-4 mr-2" /> Logout
          </button>
        </div>
      </div>
    )
  );

  // --- Views ---

  if (view === 'landing') {
    return (
      <div className="h-screen bg-orange-50 flex flex-col items-center justify-center p-6 space-y-6">
        <div className="text-center mb-8">
          <div className="bg-orange-600 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
            <Car className="w-10 h-10 text-white" />
          </div>
          <h1 className="text-3xl font-bold text-gray-800">Maheshwar<span className="text-orange-600">Ride</span></h1>
          <p className="text-gray-500 mt-2">Choose your role to continue</p>
        </div>

        <button onClick={() => { setUserRole('user'); setView('auth-user'); }} className="w-full max-w-sm bg-white p-4 rounded-xl shadow-md hover:shadow-lg transition flex items-center space-x-4">
          <div className="bg-blue-100 p-3 rounded-full"><User className="w-6 h-6 text-blue-600" /></div>
          <div className="text-left"><h3 className="font-bold text-gray-800">Passenger</h3><p className="text-sm text-gray-500">Book rides instantly</p></div>
        </button>

        <button onClick={() => { setUserRole('driver'); setView('auth-driver-login'); }} className="w-full max-w-sm bg-white p-4 rounded-xl shadow-md hover:shadow-lg transition flex items-center space-x-4">
          <div className="bg-green-100 p-3 rounded-full"><Car className="w-6 h-6 text-green-600" /></div>
          <div className="text-left"><h3 className="font-bold text-gray-800">Driver</h3><p className="text-sm text-gray-500">Login / Register & Earn</p></div>
        </button>

        <button onClick={() => { setUserRole('admin'); setView('auth-admin'); }} className="w-full max-w-sm bg-white p-4 rounded-xl shadow-md hover:shadow-lg transition flex items-center space-x-4">
          <div className="bg-purple-100 p-3 rounded-full"><Shield className="w-6 h-6 text-purple-600" /></div>
          <div className="text-left"><h3 className="font-bold text-gray-800">Admin</h3><p className="text-sm text-gray-500">Manage Operations</p></div>
        </button>
      </div>
    );
  }

  // --- Driver Registration & Credentials Display ---
  if (view === 'auth-driver-register') {
     if (generatedCredentials) {
       return (
         <div className="h-screen bg-white flex flex-col items-center justify-center px-6">
            <div className="bg-green-100 p-4 rounded-full mb-4">
               <CheckCircle className="w-12 h-12 text-green-600" />
            </div>
            <h2 className="text-2xl font-bold mb-2">Registration Successful!</h2>
            <p className="text-gray-500 text-center mb-6">Please save these credentials to login.</p>
            
            <div className="bg-gray-50 w-full max-w-sm p-6 rounded-xl border border-gray-200 mb-6 text-center space-y-4">
               <div>
                  <p className="text-xs text-gray-500 uppercase font-bold">Username</p>
                  <p className="text-xl font-mono text-gray-800 bg-white p-2 rounded border mt-1">{generatedCredentials.username}</p>
               </div>
               <div>
                  <p className="text-xs text-gray-500 uppercase font-bold">Password</p>
                  <p className="text-xl font-mono text-gray-800 bg-white p-2 rounded border mt-1">{generatedCredentials.password}</p>
               </div>
               <div>
                  <p className="text-xs text-gray-500 uppercase font-bold">Unique ID</p>
                  <p className="text-sm font-mono text-orange-600">{generatedCredentials.uniqueId}</p>
               </div>
            </div>

            <button onClick={() => { setFormData({username: '', password: ''}); setView('auth-driver-login'); }} className="w-full max-w-sm bg-orange-600 text-white font-bold py-3 rounded-lg shadow-lg">
               Proceed to Login
            </button>
         </div>
       );
     }

     return (
      <div className="h-screen bg-white flex flex-col px-6 pt-12 overflow-y-auto">
        <button onClick={() => setView('auth-driver-login')} className="mb-6 text-gray-500 flex items-center"><X className="w-5 h-5 mr-1"/> Cancel</button>
        <h2 className="text-2xl font-bold mb-6">Driver Registration</h2>
        
        <div className="space-y-4 pb-8">
           <input name="name" placeholder="Full Name" onChange={handleInputChange} className="w-full p-3 bg-gray-50 rounded-lg border" />
           <input name="mobile" placeholder="Mobile Number" onChange={handleInputChange} className="w-full p-3 bg-gray-50 rounded-lg border" />
           <div className="flex space-x-4">
             <label className="flex items-center space-x-2 border p-3 rounded-lg flex-1">
               <input type="radio" name="gender" value="male" onChange={handleInputChange} defaultChecked /> <span>Male</span>
             </label>
             <label className="flex items-center space-x-2 border p-3 rounded-lg flex-1">
               <input type="radio" name="gender" value="female" onChange={handleInputChange} /> <span>Female</span>
             </label>
           </div>
           
           <div className="space-y-3 pt-2 border-t">
              <p className="font-semibold text-sm text-gray-600">Documents</p>
              <div className="border-dashed border-2 border-gray-300 rounded-lg p-4 text-center text-gray-500">
                 <Upload className="w-6 h-6 mx-auto mb-1" />
                 <span className="text-xs">Upload Driver Photo</span>
              </div>
              <div className="border-dashed border-2 border-gray-300 rounded-lg p-4 text-center text-gray-500">
                 <FileText className="w-6 h-6 mx-auto mb-1" />
                 <span className="text-xs">Upload Driving License</span>
              </div>
           </div>

           <button onClick={handleDriverRegister} className="w-full bg-green-600 text-white font-bold py-3 rounded-lg shadow-lg mt-6">
             Register Driver
           </button>
        </div>
      </div>
     );
  }

  // --- Driver & Admin Login ---
  if (view === 'auth-driver-login' || view === 'auth-admin') {
     const isDriver = view === 'auth-driver-login';
     return (
      <div className="h-screen bg-white flex flex-col px-6 pt-12">
        <button onClick={() => setView('landing')} className="mb-6 text-gray-500 flex items-center"><X className="w-5 h-5 mr-1"/> Cancel</button>
        <h2 className="text-2xl font-bold mb-2">{isDriver ? 'Driver Login' : 'Admin Login'}</h2>
        <p className="text-gray-500 mb-6 text-sm">Enter your username and password to access the dashboard.</p>
        
        <div className="space-y-4">
           <div className="relative">
              <User className="absolute left-3 top-3 w-5 h-5 text-gray-400" />
              <input name="username" placeholder="Username" value={formData.username} onChange={handleInputChange} className="w-full pl-10 p-3 bg-gray-50 rounded-lg border focus:ring-2 focus:ring-orange-500 outline-none" />
           </div>
           <div className="relative">
              <Lock className="absolute left-3 top-3 w-5 h-5 text-gray-400" />
              <input name="password" type="password" placeholder="Password" value={formData.password} onChange={handleInputChange} className="w-full pl-10 p-3 bg-gray-50 rounded-lg border focus:ring-2 focus:ring-orange-500 outline-none" />
           </div>

           <button 
             onClick={isDriver ? handleDriverLogin : handleAdminLogin} 
             className="w-full bg-orange-600 text-white font-bold py-3 rounded-lg shadow-lg mt-4"
           >
             Login
           </button>

           {isDriver && (
              <p className="text-center text-sm text-gray-500 mt-4">
                 Don't have an account? <button onClick={() => setView('auth-driver-register')} className="text-orange-600 font-bold hover:underline">Register Here</button>
              </p>
           )}
        </div>
      </div>
     );
  }

  // --- User Registration ---
  if (view === 'auth-user') {
    return (
      <div className="h-screen bg-white flex flex-col px-6 pt-12">
        <button onClick={() => setView('landing')} className="mb-6 text-gray-500 flex items-center"><X className="w-5 h-5 mr-1"/> Cancel</button>
        <h2 className="text-2xl font-bold mb-6">User Registration</h2>
        <div className="space-y-4">
           <input name="name" placeholder="Full Name" onChange={handleInputChange} className="w-full p-3 bg-gray-50 rounded-lg border" />
           <input name="mobile" placeholder="Mobile Number" onChange={handleInputChange} className="w-full p-3 bg-gray-50 rounded-lg border" />
           <div className="flex space-x-4">
             <label className="flex items-center space-x-2 border p-3 rounded-lg flex-1">
               <input type="radio" name="gender" value="male" onChange={handleInputChange} defaultChecked /> <span>Male</span>
             </label>
             <label className="flex items-center space-x-2 border p-3 rounded-lg flex-1">
               <input type="radio" name="gender" value="female" onChange={handleInputChange} /> <span>Female</span>
             </label>
           </div>
           <button onClick={handleUserLogin} className="w-full bg-orange-600 text-white font-bold py-3 rounded-lg shadow-lg mt-6">
             Start Riding
           </button>
        </div>
      </div>
    );
  }

  // --- Admin Dashboard (Enhanced) ---
  if (view === 'admin-dashboard') {
    return (
      <div className="flex flex-col h-screen bg-gray-50">
        {renderHeader()}
        {renderSideMenu()}
        <div className="flex flex-1 overflow-hidden">
          {/* Sidebar */}
          <div className="w-20 md:w-64 bg-white shadow-md flex flex-col pt-4">
            <button 
              onClick={() => setAdminTab('overview')} 
              className={`p-4 flex items-center space-x-3 hover:bg-gray-50 ${adminTab === 'overview' ? 'text-orange-600 border-r-4 border-orange-600' : 'text-gray-600'}`}
            >
              <Users className="w-6 h-6" /> <span className="hidden md:inline font-semibold">Overview</span>
            </button>
            <button 
              onClick={() => setAdminTab('users')} 
              className={`p-4 flex items-center space-x-3 hover:bg-gray-50 ${adminTab === 'users' ? 'text-orange-600 border-r-4 border-orange-600' : 'text-gray-600'}`}
            >
              <User className="w-6 h-6" /> <span className="hidden md:inline font-semibold">Passengers</span>
            </button>
            <button 
              onClick={() => setAdminTab('drivers')} 
              className={`p-4 flex items-center space-x-3 hover:bg-gray-50 ${adminTab === 'drivers' ? 'text-orange-600 border-r-4 border-orange-600' : 'text-gray-600'}`}
            >
              <Car className="w-6 h-6" /> <span className="hidden md:inline font-semibold">Drivers</span>
            </button>
            <button 
              onClick={() => setAdminTab('payments')} 
              className={`p-4 flex items-center space-x-3 hover:bg-gray-50 ${adminTab === 'payments' ? 'text-orange-600 border-r-4 border-orange-600' : 'text-gray-600'}`}
            >
              <IndianRupee className="w-6 h-6" /> <span className="hidden md:inline font-semibold">Payments</span>
            </button>
          </div>

          {/* Main Content */}
          <div className="flex-1 p-6 overflow-y-auto">
            <h2 className="text-2xl font-bold mb-6 capitalize">{adminTab}</h2>

            {adminTab === 'overview' && (
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                 <div className="bg-white p-6 rounded-xl shadow-sm border-l-4 border-blue-500">
                    <p className="text-gray-500 text-sm">Total Passengers</p>
                    <p className="text-3xl font-bold text-gray-800">{ADMIN_DATA.users.length}</p>
                 </div>
                 <div className="bg-white p-6 rounded-xl shadow-sm border-l-4 border-green-500">
                    <p className="text-gray-500 text-sm">Registered Drivers</p>
                    <p className="text-3xl font-bold text-gray-800">{ADMIN_DATA.drivers.length}</p>
                 </div>
                 <div className="bg-white p-6 rounded-xl shadow-sm border-l-4 border-orange-500">
                    <p className="text-gray-500 text-sm">Total Revenue</p>
                    <p className="text-3xl font-bold text-gray-800">â‚¹{ADMIN_DATA.payments.reduce((acc, curr) => acc + curr.amount, 0)}</p>
                 </div>
              </div>
            )}

            {adminTab === 'users' && (
              <div className="bg-white rounded-xl shadow-sm overflow-hidden">
                <table className="w-full text-left border-collapse">
                  <thead className="bg-gray-50 text-gray-600 text-sm uppercase">
                    <tr>
                      <th className="p-4">Name</th>
                      <th className="p-4">Mobile</th>
                      <th className="p-4">Gender</th>
                      <th className="p-4">Joined</th>
                    </tr>
                  </thead>
                  <tbody className="divide-y divide-gray-100">
                    {ADMIN_DATA.users.map(u => (
                      <tr key={u.id}>
                        <td className="p-4 font-semibold">{u.name}</td>
                        <td className="p-4 font-mono text-sm">{u.mobile}</td>
                        <td className="p-4">{u.gender}</td>
                        <td className="p-4 text-gray-500 text-sm">{u.joined}</td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            )}

            {adminTab === 'drivers' && (
              <div className="bg-white rounded-xl shadow-sm overflow-hidden">
                <table className="w-full text-left border-collapse">
                  <thead className="bg-gray-50 text-gray-600 text-sm uppercase">
                    <tr>
                      <th className="p-4">Driver Name</th>
                      <th className="p-4">Mobile</th>
                      <th className="p-4">Status</th>
                      <th className="p-4">Certificate</th>
                    </tr>
                  </thead>
                  <tbody className="divide-y divide-gray-100">
                    {ADMIN_DATA.drivers.map(d => (
                      <tr key={d.id}>
                        <td className="p-4 font-semibold">{d.name}</td>
                        <td className="p-4 font-mono text-sm">{d.mobile}</td>
                        <td className="p-4">
                          <span className={`px-2 py-1 rounded-full text-xs font-bold ${d.status === 'Active' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}`}>
                            {d.status}
                          </span>
                        </td>
                        <td className="p-4">
                           <button onClick={() => alert(`Viewing Certificate for ${d.name}\nLicense: ${d.license}`)} className="text-blue-600 hover:underline flex items-center text-sm">
                             <FileCheck className="w-4 h-4 mr-1" /> View Docs
                           </button>
                        </td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            )}

            {adminTab === 'payments' && (
              <div className="bg-white rounded-xl shadow-sm overflow-hidden">
                <table className="w-full text-left border-collapse">
                  <thead className="bg-gray-50 text-gray-600 text-sm uppercase">
                    <tr>
                      <th className="p-4">Txn ID</th>
                      <th className="p-4">Passenger</th>
                      <th className="p-4">Driver</th>
                      <th className="p-4">Amount</th>
                      <th className="p-4">Status</th>
                    </tr>
                  </thead>
                  <tbody className="divide-y divide-gray-100">
                    {ADMIN_DATA.payments.map(p => (
                      <tr key={p.id}>
                        <td className="p-4 font-mono text-xs text-gray-500">{p.id}</td>
                        <td className="p-4">{p.user}</td>
                        <td className="p-4 text-gray-500">{p.driver}</td>
                        <td className="p-4 font-bold">â‚¹{p.amount}</td>
                        <td className="p-4">
                          <span className={`text-xs font-bold ${p.status === 'Success' ? 'text-green-600' : 'text-red-600'}`}>
                            {p.status}
                          </span>
                        </td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            )}
          </div>
        </div>
      </div>
    );
  }

  // --- Driver Dashboard (Enhanced) ---
  if (view === 'driver-dashboard') {
    return (
      <div className="flex flex-col h-screen bg-gray-50">
        {renderHeader()}
        {renderSideMenu()}
        <div className="p-6 overflow-y-auto">
          {/* Driver Profile Header */}
          <div className="bg-white rounded-2xl shadow-lg p-6 mb-6">
             <div className="flex items-center space-x-4 mb-6">
               <div className="w-16 h-16 bg-gray-200 rounded-full flex items-center justify-center border-2 border-orange-100">
                 <User className="w-8 h-8 text-gray-500" />
               </div>
               <div>
                 <h2 className="text-xl font-bold">{currentUser?.name}</h2>
                 <p className="text-sm text-gray-500">ID: <span className="font-mono text-orange-600">{currentUser?.uniqueId}</span></p>
                 <span className="text-xs bg-green-100 text-green-700 px-2 py-0.5 rounded-full mt-1 inline-block">Verified Driver</span>
               </div>
             </div>
             
             {/* Availability Toggle */}
             <div className="flex items-center justify-between bg-gray-50 p-4 rounded-xl">
               <div>
                 <p className="font-semibold text-gray-700">Availability</p>
                 <p className="text-xs text-gray-500">{driverStatus === 'online' ? 'You are receiving rides' : 'You are offline'}</p>
               </div>
               <button 
                 onClick={() => {
                   setDriverStatus(prev => prev === 'online' ? 'offline' : 'online');
                   if(driverStatus !== 'online') setTimeout(() => setDriverActiveRide(MOCK_PASSENGER), 3000); // Simulate ride after 3s
                   else setDriverActiveRide(null);
                 }}
                 className={`w-12 h-6 rounded-full p-1 transition-colors duration-300 ${driverStatus === 'online' ? 'bg-green-500' : 'bg-gray-300'}`}
               >
                 <div className={`w-4 h-4 bg-white rounded-full shadow-md transform transition-transform duration-300 ${driverStatus === 'online' ? 'translate-x-6' : ''}`}></div>
               </button>
             </div>
          </div>

          {/* Active Ride Simulation */}
          {driverStatus === 'online' && driverActiveRide && (
            <div className="bg-orange-600 rounded-2xl shadow-lg p-6 mb-6 text-white animate-slide-up">
              <div className="flex justify-between items-start mb-4">
                <h3 className="font-bold text-lg">New Ride Request</h3>
                <span className="bg-white text-orange-600 text-xs font-bold px-2 py-1 rounded">2 min away</span>
              </div>
              
              <div className="flex items-center space-x-4 mb-6">
                 <div className="w-12 h-12 bg-orange-500 rounded-full flex items-center justify-center">
                    <User className="w-6 h-6 text-white" />
                 </div>
                 <div>
                    <p className="font-bold text-xl">{driverActiveRide.name}</p>
                    <div className="flex items-center text-sm opacity-90">
                       <Star className="w-3 h-3 fill-current mr-1" /> {driverActiveRide.rating} Rating
                    </div>
                 </div>
              </div>

              <div className="bg-white/10 p-4 rounded-xl space-y-3 mb-6">
                 <div className="flex items-center">
                    <div className="w-2 h-2 bg-green-400 rounded-full mr-3"></div>
                    <p className="text-sm">{driverActiveRide.pickup}</p>
                 </div>
                 <div className="w-0.5 h-4 bg-white/20 ml-1"></div>
                 <div className="flex items-center">
                    <div className="w-2 h-2 bg-red-400 rounded-none mr-3"></div>
                    <p className="text-sm">{driverActiveRide.dropoff}</p>
                 </div>
              </div>

              <div className="flex space-x-3">
                 <button className="flex-1 bg-white text-orange-600 font-bold py-3 rounded-xl hover:bg-gray-100">Accept</button>
                 <button onClick={() => setDriverActiveRide(null)} className="flex-1 bg-transparent border border-white text-white font-bold py-3 rounded-xl hover:bg-white/10">Ignore</button>
              </div>
            </div>
          )}

          {/* Stats Grid */}
          <h3 className="font-bold text-gray-700 mb-4">Today's Stats</h3>
          <div className="grid grid-cols-2 gap-4">
             <div className="bg-white p-4 rounded-xl shadow-sm border border-gray-100">
                <Clock className="w-5 h-5 text-blue-500 mb-2" />
                <p className="text-2xl font-bold">4.2 <span className="text-sm text-gray-400 font-normal">hrs</span></p>
                <p className="text-xs text-gray-500">Online Time</p>
             </div>
             <div className="bg-white p-4 rounded-xl shadow-sm border border-gray-100">
                <Wallet className="w-5 h-5 text-green-500 mb-2" />
                <p className="text-2xl font-bold">â‚¹850</p>
                <p className="text-xs text-gray-500">Earnings</p>
             </div>
          </div>
        </div>
      </div>
    );
  }

  // --- Payment Page ---
  if (view === 'payment') {
    return (
      <div className="flex flex-col h-screen bg-gray-50">
        {renderHeader()}
        {renderSideMenu()}
        <div className="flex-1 p-6 flex flex-col">
           <h2 className="text-2xl font-bold mb-2">Payment</h2>
           <p className="text-gray-500 mb-6">Complete your transaction securely.</p>
           
           <div className="bg-white rounded-xl shadow-md overflow-hidden mb-4">
              <div className="p-4 bg-orange-50 border-b border-orange-100 flex justify-between items-center">
                 <span className="text-gray-600">Total Amount</span>
                 <span className="text-2xl font-bold text-gray-800">â‚¹{selectedRide?.price || '0.00'}</span>
              </div>
              
              <div className="p-4 space-y-3">
                 <label className={`flex items-center p-4 border rounded-xl cursor-pointer transition ${paymentMethod === 'online' ? 'border-orange-500 bg-orange-50' : 'hover:bg-gray-50'}`}>
                    <input type="radio" name="payment" className="w-5 h-5 text-orange-600" checked={paymentMethod === 'online'} onChange={() => setPaymentMethod('online')} />
                    <div className="ml-4 flex-1">
                       <span className="block font-bold text-gray-800">Online Payment</span>
                    </div>
                    <QrCode className="w-6 h-6 text-gray-400" />
                 </label>

                 <label className={`flex items-center p-4 border rounded-xl cursor-pointer transition ${paymentMethod === 'cash' ? 'border-orange-500 bg-orange-50' : 'hover:bg-gray-50'}`}>
                    <input type="radio" name="payment" className="w-5 h-5 text-orange-600" checked={paymentMethod === 'cash'} onChange={() => setPaymentMethod('cash')} />
                    <div className="ml-4 flex-1">
                       <span className="block font-bold text-gray-800">Cash Payment</span>
                    </div>
                    <Wallet className="w-6 h-6 text-gray-400" />
                 </label>
              </div>
           </div>

           {/* Dynamic Content based on selection */}
           <div className="flex-1 flex flex-col items-center justify-center p-4 rounded-xl bg-gray-100 mb-4 border border-dashed border-gray-300">
              {paymentMethod === 'online' ? (
                <div className="text-center animate-fade-in">
                   <div className="bg-white p-4 rounded-xl shadow-sm inline-block mb-3">
                      <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=upi://pay?pa=maheshwarride@upi&pn=MaheshwarRide&am=100" alt="QR Code" className="w-40 h-40 mix-blend-multiply" />
                   </div>
                   <p className="text-sm font-semibold text-gray-600">Scan to Pay via UPI</p>
                </div>
              ) : (
                <div className="text-center w-full animate-fade-in">
                   <div className="bg-black rounded-xl h-48 w-full flex flex-col items-center justify-center relative overflow-hidden mb-3">
                      <div className="absolute top-2 right-2 flex space-x-1">
                         <div className="w-2 h-2 bg-red-500 rounded-full animate-pulse"></div>
                      </div>
                      <Camera className="w-12 h-12 text-gray-500 mb-2" />
                      <p className="text-gray-400 text-xs">Camera View Active</p>
                      
                      {/* Overlay Text */}
                      <div className="absolute bottom-0 w-full bg-black/60 py-2">
                         <p className="text-white text-xs font-bold">Give payment to driver for accuracy</p>
                      </div>
                   </div>
                   <p className="text-sm font-semibold text-gray-600">Verify Cash Payment</p>
                </div>
              )}
           </div>

           <button 
             onClick={finishPayment}
             className="w-full bg-green-600 text-white font-bold py-4 rounded-xl shadow-lg hover:bg-green-700 transition active:scale-95"
           >
             {paymentMethod === 'online' ? 'I have Paid' : 'Cash Collected'}
           </button>
        </div>
      </div>
    );
  }

  // --- Thank You Page ---
  if (view === 'thank-you') {
    return (
      <div className="h-screen bg-green-50 flex flex-col items-center justify-center p-6 text-center animate-fade-in">
         <div className="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center mb-6 shadow-sm">
            <div className="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center">
               <CheckCircle className="w-8 h-8 text-white" />
            </div>
         </div>
         <h1 className="text-3xl font-bold text-gray-800 mb-3">Payment Successful!</h1>
         <p className="text-gray-600 text-lg max-w-xs mx-auto">
            Thank you for Giving us an Opportunity.
         </p>
         <p className="text-sm text-gray-400 mt-8">Redirecting you shortly...</p>
      </div>
    );
  }

  // --- Main User View (Map & Booking) ---
  return (
    <div className="flex flex-col h-screen bg-gray-50 font-sans overflow-hidden">
      {renderHeader()}
      {renderSideMenu()}

      {/* --- Main Content Area --- */}
      <div className="flex-1 relative overflow-y-auto">
        
        {/* Map Placeholder Background */}
        <div className="absolute inset-0 z-0 bg-blue-50 opacity-50 flex items-center justify-center overflow-hidden">
           {/* Abstract Map UI */}
           <div className="relative w-full h-full opacity-20 pointer-events-none">
              <div className="absolute top-1/4 left-1/4 w-32 h-32 bg-gray-300 rounded-full mix-blend-multiply filter blur-xl"></div>
              <div className="absolute top-1/3 right-1/4 w-32 h-32 bg-orange-200 rounded-full mix-blend-multiply filter blur-xl"></div>
              <div className="absolute bottom-1/4 right-1/3 w-32 h-32 bg-yellow-200 rounded-full mix-blend-multiply filter blur-xl"></div>
              <svg className="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                 <path d="M0 50 Q 50 0 100 50" stroke="gray" strokeWidth="0.5" fill="none"/>
                 <path d="M20 100 Q 50 50 80 100" stroke="gray" strokeWidth="0.5" fill="none"/>
                 <path d="M0 20 L 100 80" stroke="gray" strokeWidth="0.5" fill="none"/>
              </svg>
           </div>
           <div className="z-0 text-gray-400 font-bold text-4xl opacity-10 rotate-12 absolute">MAP VIEW</div>
        </div>

        {/* --- View: Home / Input --- */}
        {(view === 'home' || view === 'choosing') && (
          <div className="relative z-10 p-4 pt-8">
            <div className="bg-white rounded-xl shadow-lg p-5 max-w-md mx-auto">
              <h2 className="text-xl font-bold mb-4">Where to, {currentUser?.name?.split(' ')[0] || 'Guest'}?</h2>
              <form onSubmit={handleSearch} className="space-y-4">
                <div className="relative">
                  <div className="absolute left-3 top-3.5 w-2 h-2 rounded-full bg-green-500"></div>
                  <div className="absolute left-4 top-5 w-0.5 h-10 bg-gray-200"></div>
                  <input 
                    type="text" 
                    placeholder="Pickup location (e.g. Ahilya Fort)" 
                    className="w-full pl-8 pr-4 py-3 bg-gray-100 rounded-lg focus:ring-2 focus:ring-orange-500 outline-none text-sm transition-all"
                    value={pickup}
                    onChange={(e) => setPickup(e.target.value)}
                  />
                </div>
                <div className="relative">
                  <div className="absolute left-3 top-3.5 w-2 h-2 rounded-none bg-orange-600"></div>
                  <input 
                    type="text" 
                    placeholder="Drop location (e.g. Narmada Ghat)" 
                    className="w-full pl-8 pr-4 py-3 bg-gray-100 rounded-lg focus:ring-2 focus:ring-orange-500 outline-none text-sm transition-all"
                    value={dropoff}
                    onChange={(e) => setDropoff(e.target.value)}
                  />
                </div>
                {view === 'home' && (
                  <button type="submit" className="w-full bg-orange-600 text-white font-bold py-3 rounded-lg shadow-md hover:bg-orange-700 transition active:scale-95">
                    Search Rides
                  </button>
                )}
              </form>
            </div>
          </div>
        )}

        {/* --- View: Choosing Ride --- */}
        {view === 'choosing' && (
          <div className="absolute bottom-0 w-full bg-white rounded-t-3xl shadow-[0_-5px_20px_rgba(0,0,0,0.1)] z-20 animate-slide-up max-w-md left-1/2 -translate-x-1/2">
            <div className="p-2 flex justify-center">
              <div className="w-12 h-1.5 bg-gray-300 rounded-full"></div>
            </div>
            <div className="px-4 pb-4">
              <h3 className="text-lg font-bold text-gray-800 mb-2">Available Rides</h3>
              <div className="space-y-2 max-h-60 overflow-y-auto pb-4">
                {RIDE_OPTIONS.map((ride) => (
                  <div 
                    key={ride.id}
                    onClick={() => confirmRide(ride)} 
                    className="flex items-center justify-between p-3 border border-gray-100 rounded-xl hover:bg-orange-50 hover:border-orange-200 cursor-pointer transition-all active:scale-95 group"
                  >
                    <div className="flex items-center space-x-3">
                      <div className="text-3xl filter drop-shadow-sm group-hover:scale-110 transition-transform">{ride.icon}</div>
                      <div>
                        <h4 className="font-bold text-gray-800">{ride.name}</h4>
                        <p className="text-xs text-gray-500">{ride.time} â€¢ {ride.desc}</p>
                      </div>
                    </div>
                    <div className="text-right">
                      <p className="font-bold text-lg">â‚¹{ride.price}</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}

        {/* --- View: Searching --- */}
        {view === 'searching' && (
          <div className="absolute bottom-0 w-full bg-white rounded-t-3xl shadow-2xl z-20 p-6 text-center max-w-md left-1/2 -translate-x-1/2">
            <div className="animate-pulse mb-4 flex justify-center">
              <div className="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center">
                 <Navigation className="w-8 h-8 text-orange-600 animate-spin" />
              </div>
            </div>
            <h3 className="text-xl font-bold mb-1">Connecting to drivers...</h3>
            <p className="text-gray-500 text-sm mb-6">Finding the best {selectedRide?.name} nearby</p>
            
            <div className="w-full bg-gray-200 rounded-full h-2 mb-6">
              <div 
                className="bg-orange-600 h-2 rounded-full transition-all duration-75"
                style={{ width: `${searchTimer}%` }}
              ></div>
            </div>

            <button onClick={cancelRide} className="text-gray-400 font-semibold hover:text-gray-600">Cancel Request</button>
          </div>
        )}

        {/* --- View: Riding / Driver Found --- */}
        {view === 'riding' && (
          <div className="absolute bottom-0 w-full bg-white rounded-t-3xl shadow-2xl z-20 p-5 max-w-md left-1/2 -translate-x-1/2">
            {/* Status Header */}
            <div className="flex justify-between items-center mb-4 border-b pb-4">
              <div>
                <h3 className="text-lg font-bold text-gray-800">Driver is arriving</h3>
                <p className="text-xs text-orange-600 font-semibold">2 mins away</p>
              </div>
              <div className="bg-orange-100 px-3 py-1 rounded-full text-orange-700 font-mono font-bold text-sm">
                OTP: 4921
              </div>
            </div>

            {/* Driver Info */}
            <div className="flex items-center space-x-4 mb-6">
              <div className="w-14 h-14 bg-gray-200 rounded-full overflow-hidden border-2 border-white shadow-md">
                 <img src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${MOCK_DRIVER.name}`} alt="Driver" />
              </div>
              <div className="flex-1">
                <h4 className="font-bold text-gray-800">{MOCK_DRIVER.name}</h4>
                <div className="flex items-center text-xs text-gray-500 space-x-2">
                   <span className="flex items-center bg-green-50 text-green-700 px-1.5 py-0.5 rounded">
                     {MOCK_DRIVER.rating} <Star className="w-3 h-3 ml-0.5 fill-current" />
                   </span>
                   <span>â€¢ {MOCK_DRIVER.vehicle}</span>
                   <span>â€¢ {selectedRide?.name}</span>
                </div>
              </div>
              <div className="flex space-x-2">
                <button className="p-2.5 bg-green-100 text-green-700 rounded-full hover:bg-green-200">
                  <Phone className="w-5 h-5" />
                </button>
                <button className="p-2.5 bg-blue-100 text-blue-700 rounded-full hover:bg-blue-200">
                  <Shield className="w-5 h-5" />
                </button>
              </div>
            </div>

            {/* Ride Details Card */}
            <div className="bg-gray-50 rounded-xl p-4 mb-4">
               <div className="flex items-start space-x-3 mb-3">
                  <div className="mt-1 w-2 h-2 rounded-full bg-green-500"></div>
                  <div>
                    <p className="text-xs text-gray-400 font-bold uppercase">Pickup</p>
                    <p className="text-sm font-semibold text-gray-700">{pickup}</p>
                  </div>
               </div>
               <div className="flex items-start space-x-3">
                  <div className="mt-1 w-2 h-2 rounded-none bg-orange-600"></div>
                  <div>
                    <p className="text-xs text-gray-400 font-bold uppercase">Dropoff</p>
                    <p className="text-sm font-semibold text-gray-700">{dropoff}</p>
                  </div>
               </div>
            </div>

            {/* Action */}
            <div className="flex items-center justify-between">
              <button 
                onClick={() => { setView('completed'); setTimeout(() => proceedToPayment(), 2000); }} 
                className="w-full bg-gray-800 text-white px-6 py-3 rounded-xl font-bold hover:bg-gray-900 shadow-lg"
              >
                End Ride & Pay
              </button>
            </div>
          </div>
        )}

        {/* --- View: Completed --- */}
        {view === 'completed' && (
          <div className="absolute inset-0 bg-white z-50 flex flex-col items-center justify-center p-6 animate-fade-in">
             <div className="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mb-4">
                <CheckCircle className="w-10 h-10 text-green-600" />
             </div>
             <h2 className="text-2xl font-bold text-gray-800 mb-2">Ride Completed!</h2>
             <p className="text-gray-500 mb-6">You reached {dropoff} safely.</p>
             <p className="text-sm text-gray-400">Proceeding to payment...</p>
          </div>
        )}

      </div>
    </div>
  );
}
