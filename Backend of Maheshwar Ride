import React, { useState, useEffect } from 'react';
import { 
  MapPin, Navigation, Car, Menu, X, Star, Phone, Shield, 
  User, Clock, CreditCard, Upload, FileText, CheckCircle, 
  Wallet, LogOut, Power, Camera, QrCode, Lock, Users, FileCheck, IndianRupee
} from 'lucide-react';

// --- Mock Data ---
